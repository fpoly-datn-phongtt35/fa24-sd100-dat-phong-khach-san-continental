
@{
    ViewBag.Title = "Continental";
}

<div class="navbar">
    <div class="navbar-left">
        <img src="~/img/2.png" style="width: 100px; height: 100px;" alt="Logo" />
        <h1 style="font-size: 24px; margin: 0; color: white;">Trang Chủ Continental</h1>
    </div>
    <div class="navbar-right">
        @if (Context.Session.GetString("UserName") == null)
        {
            <button class="nav-button"><a href="/login">Đăng Nhập</a></button>
            <button class="nav-button"><a href="/register">Đăng ký</a></button>
        }
        else
        {
            <span>Xin chào, @Context.Session.GetString("UserName")!</span>
            <button class="nav-button"><a href="/logout">Đăng Xuất</a></button>
        }
    </div>
</div>
<div class="nav-menu">
    <div class="nav-item"><a href="#">Khách Sạn</a></div>
    <div class="nav-item"><a href="#">Dịch vụ</a></div>
</div>
<div class="banner">
    <img src="~/img/2.png" alt="Alternate Text" style="width: 300px; height: 250px;" />
</div>



<div class="search-box">
    <h3 style="text-align: center;">Tìm Kiếm Khách Sạn</h3>
    <input type="text" placeholder="Nhập địa điểm, khách sạn...">
    <button>Tìm Kiếm</button>
</div>

<h3 style="text-align: center; margin-top: 20px;">Dịch Vụ Của Chúng Tôi</h3>
<div class="services">
    <div class="service">
        <img src="https://example.com/hotel_icon.png" alt="Khách Sạn">
        <h4>Khách Sạn</h4>
        <p>Trải nghiệm khách sạn với dịch vụ chuyên nghiệp và hiện đại nhất.</p>
    </div>
    <!-- Bạn có thể thêm các dịch vụ khác vào đây -->
</div>

<footer>
    <p>© 2024 Continental. Bảo lưu mọi quyền.</p>
</footer>
