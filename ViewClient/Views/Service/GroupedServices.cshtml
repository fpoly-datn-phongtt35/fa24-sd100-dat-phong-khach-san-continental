@model List<ViewClient.Controllers.GroupedServiceViewModel>

<div class="container-fluid flex-grow-1 d-flex flex-column align-items-center">
    <main style="width: 100%;">
        <h2 style="text-align: center; padding-top: 150px;">Danh sách dịch vụ</h2>

        @if (Model != null && Model.Any())
        {
            <div style="display: flex; justify-content: center; flex-wrap: wrap; gap: 20px; margin-top: 20px;">
                @foreach (var group in Model)
                {
                    <div style="flex: 1 0 22%; max-width: 22%; text-align: center; padding: 15px; border-radius: 5px; background-color: #f9f9f9;">
                        <strong>@(string.IsNullOrWhiteSpace(group.ServiceTypeName) ? "Unknown Type" : group.ServiceTypeName)</strong>
                        <div style="text-align: center; margin-top: 10px;">
                            @foreach (var serviceName in group.ServiceNames ?? new List<string>())
                            {
                                <p style="margin: 0;">@serviceName</p>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p style="text-align: center; color: red;">Không có dữ liệu để hiển thị.</p>
        }
    </main>
</div>
