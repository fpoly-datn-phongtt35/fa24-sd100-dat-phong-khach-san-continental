@model Domain.DTO.ServiceOrder.ServiceOrderCreateRequest
@{
    ViewData["Title"] = "Create Service Order";
}

<h2>Create Service</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="RoomBookingId">RoomBooking</label>
        <select asp-for="RoomBookingId" class="form-control" asp-items="@(new SelectList(ViewBag.RoomBookings, "Id", "Id"))">
            <option value="">-- Select RoomBooking --</option>
        </select>
    </div>
    <input type="hidden" asp-for="CreatedTime" value="@DateTime.Now" />
    @* <input type="hidden" asp-for="CreatedBy" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" /> *@

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
