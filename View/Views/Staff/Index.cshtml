@using Domain.DTO.Paging
@using View.Models.Paging
@model ResponseData<Domain.Models.Staff>

@{
    ViewData["Title"] = "Index";
}
<div class="p-3">
    <form class="form-inline d-flex justify-content-between mt-5" onsubmit="return false">
        <input class="form-control" type="text" id="txt_search" oninput="_staff.OnchangeSearchText()" style="max-width:87%" placeholder="Tìm kiếm" aria-label="Search">
        <button class="btn btn-outline-success" onclick="_staff.LoadForm()">Thêm nhân viên +</button>
    </form>
    @* <div class="fixed-notification">
        Đây là thông báo sẽ luôn hiển thị ở góc trên bên trái màn hình
    </div> *@
    <div id="ListStaff" class="">
        <div class="d-flex justify-content-center pt-5">
            <div id="loading-spinner" style="width: 5rem; height: 5rem;" class="spinner-border text-success pt-5" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script asp-append-version="true" src="/modules/Staff.js"></script>
}
