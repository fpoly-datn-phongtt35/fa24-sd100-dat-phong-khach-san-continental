@model Domain.Models.ServiceOrderDetail

<h2>Edit Service Order Detail</h2>

<form asp-action="Edit" method="post">
@*     <input type="hidden" asp-for="Id" />
 *@
    <div class="form-group">
        <label asp-for="ServiceOrderId">Service Order</label>
        <select asp-for="ServiceOrderId" class="form-control" asp-items="@(new SelectList(ViewBag.ServiceOrders, "Id", "Id", Model.ServiceOrderId))">
            <option value="">-- Select Service Order --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ServiceId">Service</label>
        <select asp-for="ServiceId" class="form-control" asp-items="@(new SelectList(ViewBag.Services, "Id", "Name", Model.ServiceId))">
            <option value="">-- Select Service --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control" asp-items="@(new SelectList(ViewBag.Statuses, Model.Status))"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Deleted"></label>
        <input asp-for="Deleted" type="checkbox" />
        <span asp-validation-for="Deleted" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ModifiedTime" value="@DateTime.UtcNow" />

    <button type="submit" class="btn btn-primary">Update</button>
</form>
