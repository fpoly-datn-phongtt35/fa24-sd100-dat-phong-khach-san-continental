@model List<Domain.DTO.Room.TopRoomBookingViewModel>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Top Room Bookings";
    var filterType = HttpContextAccessor.HttpContext.Request.Query["filterType"].ToString();
}

<h1>@ViewData["Title"]</h1>

<form method="get" action="@Url.Action("TopRoomBooking")">
    <label for="filterType">Chọn loại bộ lọc:</label>
    <select id="filterType" name="filterType" class="form-control" onchange="this.form.submit()" style="width: 80px">
        <option value="Month" selected="@(filterType == "Month" ? "selected" : null)">Tháng</option>
        <option value="Year" selected="@(filterType == "Year" ? "selected" : null)">Năm</option>
    </select>
</form>

@if (Model == null || !Model.Any())
{
    <p>Không có dữ liệu để hiển thị.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên Phòng</th>
                <th>Loại Phòng</th>
                <th>Giá</th>
                <th>Địa chỉ</th>
                <th>Diện tích (m²)</th>
                <th>Số lần đặt</th>
                <th>Hình ảnh</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var room = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@room.Name</td>
                    <td>@room.RoomTypeName</td>
                    <td>@room.Price.ToString("C")</td>
                    <td>@room.Address</td>
                    <td>@room.RoomSize</td>
                    <td>@room.BookingCount</td>
                    <td>
                        @if (room.Images != null && room.Images.Any())
                        {
                            <img src="@room.Images.First()" alt="Hình ảnh" style="width: 100px; height: 100px;" />
                        }
                        else
                        {
                            <p>Không có ảnh</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
