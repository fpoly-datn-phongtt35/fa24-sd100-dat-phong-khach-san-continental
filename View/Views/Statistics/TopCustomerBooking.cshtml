@model List<Domain.DTO.Room.TopCustomerBooking>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Top Customer Booking";
    var filterType = HttpContextAccessor.HttpContext.Request.Query["filterType"].ToString();
}

<h1>@ViewData["Title"]</h1>

<form method="get" action="@Url.Action("TopCustomerBooking")">
    <label for="filterType">Chọn loại bộ lọc:</label>
    <select id="filterType" name="filterType" class="form-control" onchange="this.form.submit() " style="width: 80px">
        <option value="Month" selected="@(filterType == "Month" ? "selected" : null)">Tháng</option>
        <option value="Year" selected="@(filterType == "Year" ? "selected" : null)">Năm</option>
    </select>
</form>

@if (Model == null || !Model.Any())
{
    <p>Không có dữ liệu để hiển thị.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên Khách Hàng</th>
                <th>Email</th>
                <th>Số Điện Thoại</th>
                <th>Giới Tính</th>
                <th>Số Lần Đặt Phòng</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var customer = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@($"{customer.FirstName} {customer.LastName}")</td>
                    <td>@customer.Email</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@(customer.Gender == 1 ? "Nam" : customer.Gender == 2 ? "Nữ" : "Khác")</td>
                    <td>@customer.BookingCount</td>
                </tr>
            }
        </tbody>
    </table>
}
