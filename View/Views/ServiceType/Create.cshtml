@model Domain.DTO.ServiceType.ServiceTypeCreateRequest
@{
    ViewData["Title"] = "Create ServiceType";
}

<h2>Thêm loại dịch vụ</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Tên loại dịch vụ</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Mô tả</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="CreatedTime" value="@DateTime.UtcNow" /> 

    <button type="submit" class="btn btn-primary">Tạo mới</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
