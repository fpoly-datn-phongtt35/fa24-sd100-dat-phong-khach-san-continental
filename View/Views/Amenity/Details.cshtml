@using View.Views.Shared.Helper
@model Domain.DTO.Amenity.AmenityResponse

@{
    ViewData["Title"] = "Details";
}

<h3>Chi tiết tiện nghi</h3>
<a asp-action="Index" class="btn btn-outline-primary mt-3 mb-3">
    Quay lại
</a>

<div class="row">
    <div class="col-md-6">
        <div class="form-group mb-3">
            <label class="control-label1">Tên tiện nghi</label>
            <p class="form-control-static">@Html.DisplayFor(model => model.Name)</p>
        </div>

        <div class="form-group mb-3">
            <label class="control-label1">Trạng thái</label>
            <p class="form-control-static">@StatusHelper.DisplayStatusBadge(Model.Status)</p>
        </div>

        <div class="form-group mb-3">
            <label class="control-label1">Thời gian tạo</label>
            <p class="form-control-static">@Html.DisplayFor(model => model.CreatedTime)</p>
        </div>

        <div class="form-group mb-3">
            <label class="control-label1">Được tạo bởi</label>
            <p class="form-control-static">@Html.DisplayFor(model => model.CreatedBy)</p>
        </div>

        <div class="form-group mb-3">
            <label class="control-label1">Thời gian sửa</label>
            <p class="form-control-static">@Html.DisplayFor(model => model.ModifiedTime)</p>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group mb-3">
            <label class="control-label1">Mô tả</label>
            <p class="form-control-static">@Html.DisplayFor(model => model.Description)</p>
        </div>

        <div class="form-group mb-3">
            <label class="control-label1">Được sửa bởi</label>
            <p class="form-control-static">@Html.DisplayFor(model => model.ModifiedBy)</p>
        </div>

        <div class="form-group mb-3">
            <label class="control-label1">Trạng thái Xóa</label>
            <p class="form-control-static">@((Model.Deleted ? "Đã xóa" : "Chưa xóa"))</p>
        </div>

        <div class="form-group mb-3">
            <label class="control-label1">Thời gian xóa</label>
            <p class="form-control-static">@Html.DisplayFor(model => model.DeletedTime)</p>
        </div>

        <div class="form-group mb-3">
            <label class="control-label1">Được xóa bởi</label>
            <p class="form-control-static">@Html.DisplayFor(model => model.DeletedBy)</p>
        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Sửa", "Edit", new { amenityId = Model.Id }, new { @class = "button1 button-warning" })
</div>

<style>
    dt {
        margin-bottom: 10px;
    }
    dd {
        margin-bottom: 20px;
    }
</style>
