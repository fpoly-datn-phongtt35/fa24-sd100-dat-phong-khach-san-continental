@using View.Views.Shared.Helper
@model Domain.Models.PostType

@{
    ViewData["Title"] = "Details";
}

<h3>Thông tin chi tiết loại bài đăng</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tiêu đề
        </dt>
        <dd class = "col-sm-10">
            @((Model.TitleOfType != null)
                ? PostTypeHelper.DisplayPostType(Model.TitleOfType.Value)
                : "Unknown")
        </dd>
        <dt class = "col-sm-2">
           Nội dung
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
           Trang thái
        </dt>
        <dd class = "col-sm-10">
            @StatusHelper.DisplayStatusBadge(Model.Status)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" }) |
    <a asp-action="Index" class="btn btn-info">Quay lại</a>
</div>
